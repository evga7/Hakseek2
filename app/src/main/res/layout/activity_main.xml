<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="838dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#FFFFFF">


            <ImageView
                android:id="@+id/logoimagee"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/sejong_logo" />

            <TextView
                android:layout_width="190dp"
                android:layout_height="43dp"
                android:gravity="center"
                android:text="세종대학교  학식이"
                android:textColor="#000000"
                android:textSize="20dp" />
            <Button
                android:layout_marginLeft="20dp"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="결제페이 충전"
                android:onClick="Charge_Account"
                android:background="@drawable/button_round"
                    />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/AzioBtn"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="#63b5e8"
                android:text="아지오"
                android:textSize="14dp"/>
            <Button
                android:id="@+id/Narutobtn"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:text="나루또"

                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ShanghiBtn"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:text="상하이"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/KimheavenBtn"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:text="김밥천국"
                android:textColor="#000000"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/PozangBtn"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:text="포장주문"
                android:textColor="#000000"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/NoporkBtn"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:text=" NO PORK"
                android:textColor="#000000"
                android:textSize="11dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/DrinkBtn"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:text=" 음료"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/AzioLayout"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:background="#FFFF">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="310dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/M1_1"
                    android:layout_below="@+id/M1_1"
                    android:layout_marginTop="-10dp"
                    android:gravity="center"
                    android:text="오므라이스 2800원"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/M1_1"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:onClick="M1_1Click"
                    android:src="@drawable/menu_omrice" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView2"
                    android:layout_centerHorizontal="true"
                    android:text="불닭비빔밥 4000원"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/dakbibim"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:onClick="M1_2Click"
                    android:src="@drawable/dak_4000" />

                <ImageView
                    android:id="@+id/M1_3"
                    android:onClick="M1_3Click"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:src="@drawable/chijeubudaejjigae_3800" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/M1_3"
                    android:layout_alignTop="@+id/textView2"
                    android:gravity="center"
                    android:text="새우튀김알밥 4000원"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/M3_1"
                    android:onClick="M3_1Click"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_alignLeft="@+id/M2_T1"
                    android:layout_below="@+id/M2_T1"
                    android:src="@drawable/don_o_4500" />

                <TextView
                    android:id="@+id/M3_T1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/M3_1"
                    android:layout_marginLeft="10dp"
                    android:text="돈까스오믈렛 4500원"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/M3_2"
                    android:onClick="M3_2Click"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_alignLeft="@+id/M2_T2"
                    android:layout_below="@+id/M2_T2"
                    android:src="@drawable/bul_o_4500" />

                <TextView
                    android:id="@+id/M3_T2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/M3_2"
                    android:layout_marginLeft="120dp"
                    android:text="불닭오믈렛 4500원"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/M3_3"
                    android:onClick="M3_3Click"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_alignLeft="@+id/M2_T3"
                    android:layout_below="@+id/M2_T3"
                    android:src="@drawable/c_b_4300" />

                <TextView
                    android:id="@+id/M3_T3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/M3_3"
                    android:layout_marginLeft="240dp"
                    android:text="치즈불닭비빔밥 4300"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/M2_1"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:onClick="M2_1Click"
                    android:src="@drawable/s_o" />

                <TextView
                    android:id="@+id/M2_T1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/M2_1"
                    android:layout_marginLeft="10dp"
                    android:text="소세지오믈렛 3800원"
                    android:textColor="#000000"
                    android:textSize="11dp" />


                <ImageView
                    android:id="@+id/M2_2"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_alignLeft="@+id/M2_T2"
                    android:layout_below="@+id/textView3"
                    android:onClick="M2_2Click"
                    android:src="@drawable/g_o_3800" />

                <TextView
                    android:id="@+id/M2_T2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/M2_2"
                    android:layout_marginLeft="120dp"
                    android:text="양념감자오믈렛 3800원"
                    android:textColor="#000000"
                    android:textSize="11dp" />

                <ImageView
                    android:id="@+id/M2_3"
                    android:onClick="M2_3Click"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_alignLeft="@+id/textView4"
                    android:layout_below="@+id/textView4"
                    android:src="@drawable/h_o_4000" />

                <TextView
                    android:id="@+id/M2_T3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/M2_3"
                    android:layout_marginLeft="240dp"
                    android:text="함박스테이크오믈렛 3500원"
                    android:textColor="#000000"
                    android:textSize="9dp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ListView
                android:id="@+id/Menu_list"
                android:layout_width="240dp"
                android:layout_height="150dp"></ListView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:id="@+id/Total_Sum"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textColor="#ff0000"
                android:textStyle="bold"
                />
<TextView
    android:layout_width="150dp"
    android:layout_height="30dp"
    android:text="결제 페이  "
    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/Account_money"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text="0"
                    android:textColor="#000000" />
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_round"
                android:text="결제"
                android:onClick="Payment"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>